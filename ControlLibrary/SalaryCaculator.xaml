<UserControl x:Class="ControlLibrary.SalaryCaculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             Width="240" Height="160" Background="AliceBlue">
    <Canvas>
        <!--Canvas上的子元素可以通过指定绝对位置（Left和Top属性）来放置，也可以使用附加属性来指定相对于Canvas的位置。
        Canvas对于需要自由布局的场景非常有用，例如绘图应用程序或需要精确放置UI元素的情况。-->
        <Label Canvas.Left="12" Canvas.Top="12" Content="基本工资：" Height="28" Name ="label1"/>
        <Label Canvas.Left="12" Canvas.Top="52" Content="岗位工资：" Height="28" Name ="label2"/>
        <Label Canvas.Left="12" Canvas.Top="85" Content="实际工资：" Height="28" Name ="label3" />
        <TextBox Canvas.Left="82" Text="" Canvas.Top="17" Width="120" Name="textBox1"/>
        <TextBox Canvas.Left="82" Text="" Canvas.Top="52" Width="120" Name="textBox2"/>
        <TextBox Canvas.Left="82" Text="" Canvas.Top="90" Width="120" Name="textBox3"/>
        <Button Content="计算" Click="button1_Click" Canvas.Left="70" Canvas.Top="126" Width="75" Name="button1"/>
    </Canvas>
</UserControl>
